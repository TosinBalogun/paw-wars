<div class="container">
	<div>
		<h1>Account Page</h1>
		<br>
		<h3>Welcome {{player.username}}</h3>
		<br>
		<p>You are currently living the following lives:</p>
		<ul>
		{{#each player.currentLives}}
			<li><a href="/play?id={{this}}">{{this}}</a></li>
		{{/each}}
		</ul>
		<br>
		<p>You have lived the following lives:</p>
		<ul>
		{{#each player.pastLives}}
			<li><a href="/records/obituary/{{this}}">{{this}}</a></li>
		{{/each}}
		</ul>
	</div>
</div><!-- /.container -->
