<div class="container">
	{{> hud}}
	<div>
		<h1>Hotel</h1>
		<br>
			{{#if police}}
				<p>Police!</p>
				<p>{{{get_police_encounter life.current.police.encounter}}}</p>

				<div class="list-group">
					<a href="/game/police" class="list-group-item">Police</a>
				</div>
			{{else}}
				{{#vendors_open life}}
				<p>A vendor is open!</p>
				{{/vendors_open}}
				<p>{{life.current.event}}</p>
				<p>You are currently in <strong>{{life.current.location.city}}</strong> and you're feeling <strong>{{life_health_description life.current.health.points}}</strong>.  You can relax here and contemplate your next move as long as you'd like.  When you're ready, choose somewhere to go.</p>

				<div class="list-group">
					<a href="/game/market" class="list-group-item">Market</a>
					<a href="/game/airport" class="list-group-item">Airport</a>
					<a href="/game/bank" class="list-group-item">Bank</a>
					{{#vendors_open life}}
					<a href="/game/vendors" class="list-group-item">Vendors</a>
					{{/vendors_open}}
					<br>
					<a href="#" class="list-group-item" data-toggle="modal" data-target="#confirmModal">Give Up</a>
				</div>
			{{/if}}


	</div>
</div><!-- /.container -->

<!-- Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmModalLabel">Confirm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to give up?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a href="/game/over" class="btn btn-danger">Give Up</a>
      </div>
    </div>
  </div>
</div>
