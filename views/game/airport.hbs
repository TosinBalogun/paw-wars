<div class="container">
	{{> hud}}
	<div class="game-content">
		<a href="/game/hotel">&lt;&nbsp;Back to Hotel</a>
		<h1>Airport</h1>
		<br>
		<p>Here's a listing of where you can fly right now and how much it will cost you. Click on a listing to buy a ticket and fly away from this crazy town.</p>
		<div id="alert-container"></div>
		<br>
		<div class="transport-info d-md-none mobile">
			{{#each life.listings.airport}}
				<div class="transport-buy" id="transport-buy-btn" data-id="{{id}}" data-name="{{name}}" data-price="{{price}}" data-city="{{city}}" data-country="{{country}}" data-flight-number="{{flight_number}}" data-flight-time="{{flight_time}}" data-toggle="modal" data-target="#transport-modal">
					<p>{{name}}</p>
					<p>{{city}}, {{country}}</p>
					<table class="table table-sm table-borderless">
						<thead>
							<tr>
								<th>FLIGHT</th>
								<th>DEST</th>
								<th>PRICE</th>
								<th>TURNS</th>
							</tr>
						</thead>
						<tbody>
							<td><tt>{{flight_number}}</tt></td>
							<td><tt>{{id}}</tt></td>
							<td><tt>${{price}}</tt></td>
							<td><tt><strong>{{flight_time}}</strong></tt></td>
						</tbody>
					</table>
				</div>
			{{/each}}
		</div>
		<div class="transport-info d-none d-md-block">
			<table>
				<thead>
					<tr>
						<th>AIRPORT</th>
						<th>CITY</th>
						<th>FLIGHT</th>
						<th>DEST</th>
						<th>PRICE</th>
						<th>TURNS</th>
					</tr>
				</thead>
				<tbody>
					{{#each life.listings.airport}}
						<tr class="transport-buy" id="transport-buy-btn" data-id="{{id}}" data-name="{{name}}" data-price="{{price}}" data-city="{{city}}" data-country="{{country}}" data-flight-number="{{flight_number}}" data-flight-time="{{flight_time}}" data-toggle="modal" data-target="#transport-modal">
							<td class="align-left">{{name}}</td>
							<td class="align-left">{{city}}, {{country}}</td>
							<td>{{flight_number}}</td>
							<td>{{id}}</td>
							<td>${{price}}</td>
							<td>{{flight_time}}</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div><!-- /.container -->

<div class="modal fade" id="transport-modal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 id="transport-title" class="modal-title"></h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<p id="transport-confirm-message">Your flight will takeoff
					<strong id="transport-confirm-leave">immediately</strong> and land at
					<strong id="transport-confirm-destination">an airport</strong> in
					<strong id="transport-confirm-turns">0</strong>.	You will be charged
					$<strong id="transport-confirm-price">0.00</strong> for this one-way flight.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
				<button type="button" id="transport-confirm-book-btn" data-life-id="{{life._id}}" class="btn btn-success">Book</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
